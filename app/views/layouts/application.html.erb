<!DOCTYPE html>
<html>
<head>
  <title>Securelogin</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% if user_signed_in? %>
<div style="text-align: center;position: fixed;top:3%;right: 6%;">
    <%=current_user.email%>
  </div>
<% end %>

<div class="alert-box notice" style="text-align: center;position: fixed;top:3%;left: 28%;">
<%= flash[:notice]%>
</div>
<%= yield %>
</body>
</html>
